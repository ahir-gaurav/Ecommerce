# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/kicks-dont-stink
# OR use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kicks-dont-stink

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Nodemailer with Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Kicks Don't Stink <noreply@kicksdontstink.com>

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Admin Owner Verification Code (for first admin registration)
OWNER_VERIFICATION_CODE=OWNER2026

# Frontend URLs (for CORS)
USER_FRONTEND_URL=http://localhost:5173
ADMIN_FRONTEND_URL=http://localhost:5174

# Default Settings
DEFAULT_GST_PERCENTAGE=18
DEFAULT_DELIVERY_CHARGE=50
LOW_STOCK_THRESHOLD=10
